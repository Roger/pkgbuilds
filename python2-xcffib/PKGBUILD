# Maintainer: Roger Duran <rogerduran@gmail.com>
pkgname=python2-xcffib
pkgver=0.1.1
pkgrel=1
pkgdesc="A drop in replacement for xpyb, an XCB python binding"
arch=(any)
url="https://pypi.python.org/pypi/xcffib"
license=(MIT)
depends=(python2 python2-six python2-cffi)
makedepends=(python2-setuptools)
source=("https://pypi.python.org/packages/source/x/xcffib/xcffib-v${pkgver}.tar.gz")
md5sums=('5b077c6947e1c83a8db90a2cc99beba4')

package () {
    cd "${srcdir}/xcffib-v${pkgver}/"
    python2 setup.py install --root="${pkgdir}/" --optimize=1
}
